/* miniprogram/pages/index/index.wxss */
page{
  background-color: #fefefe;
}
.notPhostUrl{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
swiper image{
  width: 100%;
}

.group{
  display: flex;
  flex-wrap: wrap;
}


.group-item{
  width:50%;
  background-color: #fff;
  border-radius: 10rpx;
  border:2rpx solid #eee;
  margin-bottom: 10rpx;
  padding:10rpx;
  box-sizing: border-box;
}
.group-item image{
  width:100%;
  height: 200rpx;
}
.group-item  view{
  border-top: 2rpx solid #eee;
}
.btn-group{
  display: flex;
  position: fixed;
  width: 100%;
  bottom: 0;

}
.btn-group view{
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
}
.btn-group .add-group{
  background-color: mediumblue;
}
.btn-group .add-image{
  background-color: mediumseagreen;
}